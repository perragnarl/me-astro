---
export interface Props {
	start: string
	end: string
	title: string
	subtitle: string
}

const { start, end, title, subtitle } = Astro.props
---

<li class="js-timeline relative mb-12 ml-8 opacity-0 -translate-x-12">
	<div
		class="absolute w-4 h-4 bg-slate-600 rounded-full mt-2.5 -left-10 border border-slate-600"
	>
	</div>
	<time
		class="mb-1 text-base leading-none text-slate-400"
	>
		{start} - {end}
	</time>
	<h3 class="text-2xl tracking-wide font-bold">
		{title}
	</h3>
	<p class="mb-4">
		{subtitle}
	</p>
</li>
